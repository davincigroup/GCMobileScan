<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App1.Views.ScanPage"
             xmlns:vm="clr-namespace:App1.ViewModels"
             Title="{Binding Title}">

    <ContentPage.BindingContext>
        <vm:ScanViewModel />
    </ContentPage.BindingContext>

    <ContentPage.Resources>
        <ResourceDictionary>
            <Color x:Key="Accent">#96d1ff</Color>
        </ResourceDictionary>
    </ContentPage.Resources>

    <StackLayout>
        <Entry Placeholder="" x:Name="txtValue" />

        <Picker Title="Select a barcode"
        TitleColor="Red">
            <Picker.Items>
                <x:String>GTIN</x:String>
                <x:String>NDC</x:String>
            </Picker.Items>
        </Picker>

        <Image Source="gs1datamatrix"
       HorizontalOptions="Center" />
      
        <Button Text="Go GTIN"  Clicked="OnButtonClickedGTIN"      
                HorizontalOptions="Center"  Margin="0,30" />

        <Button Text="Go NDC"  Clicked="OnButtonClickedNDC"       
                HorizontalOptions="Center"   Margin="0,30"/>


    </StackLayout>
    
  

</ContentPage>